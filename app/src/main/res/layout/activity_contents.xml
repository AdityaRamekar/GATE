<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="82dp"
    tools:layout_editor_absoluteY="160dp">
    tools:context=".contents">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textview5"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="40dp"
        android:text="CSE"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="****contents****"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/ds"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Programming and Data Structures"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />

    <Button
        android:id="@+id/genaptitude"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="General Aptitude"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/enggmaths"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Engg Mathematics"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/digitallogic"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Digital Logic"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/coa"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Computer Organization &amp; architecture"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
       <Button
        android:id="@+id/algo"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Algorithms"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/toc"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Theory of Computation"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />

    <Button
        android:id="@+id/Compiler"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Compiler Design"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />

    <Button
        android:id="@+id/OS"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Operating System"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/db"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Databases"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/isee"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Information Systems and Software Engineering"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/cn"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Computer Networks"
        android:onClick="displayToast"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />
    <Button
        android:id="@+id/mcq"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="mcq"
        android:textColor="@color/black"
        app:backgroundTint="@android:color/darker_gray" />

</LinearLayout>
    </ScrollView>