<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dsintro"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textview10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Video Lectures"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/cprog"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:text="Programming in C"
            android:textColor="@color/teal_200"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recursion"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Recursion"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/teal_200"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/arrays"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Arrays"
            android:clickable="true"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textColor="@color/teal_200"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/stacks"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="stacks"
            android:clickable="true"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/teal_200"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/queues"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="queue"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/linkedlists"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="linked lists"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/trees"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="trees"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/binarysearch"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="binary search trees"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/binaryheaps"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="binary heaps"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/graphs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="graphs"
            android:textColor="@color/teal_200"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/textview9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#E40E0E"
            android:text="Theory notes"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/opennotesds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Notes"
            android:textColor="@color/white"
            app:backgroundTint="@color/material_on_background_disabled" />
    </LinearLayout>

</ScrollView>